<ScrollView 
    android:id="@+id/scroll_view"
    android:scrollbarAlwaysDrawVerticalTrack="true" 
    android:scrollbarStyle="outsideInset" 
    android:layout_gravity="left"  
    android:scrollbars="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="450dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

	    <LinearLayout
	       android:orientation="vertical"
	       android:layout_width="fill_parent"
	       android:layout_height="250dp"
           android:focusable="false"
           android:focusableInTouchMode="false">

            <include 
                android:id="@+id/Personal_Information" 
                layout="@layout/personal_information">
            </include>
            
            <LinearLayout
                android:id="@+id/technical_skill"
	            android:orientation="vertical"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5.0dip"
	            android:focusable="false"
	            android:focusableInTouchMode="false">
	            
	            <LinearLayout
	               android:id="@+id/technical"
	               android:layout_marginTop="15.0dip"
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   
                   <ImageView
                       android:id="@+id/technical_icon"
                       android:layout_marginLeft="@dimen/margin_space"
                       android:layout_gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/custom_ic">
                   </ImageView>   
                   
		           <TextView 
		               android:id="@+id/Title_TechnicalSkill"
		               android:layout_marginLeft="@dimen/margin_space"
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:layout_gravity="center_vertical"
		               android:textColor="@color/title_Color"
		               android:textSize="@dimen/text_title"
		               android:text="@string/str_technical">
		            </TextView>
		        </LinearLayout>
		        
		        <TextView
		            android:id="@+id/summary"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/str_technical_outline">
		        </TextView>
		        
                <LinearLayout
                   android:id="@+id/android"
                   android:layout_marginTop="5.0dip"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   
                   <ImageView
                       android:id="@+id/android_icon"
                       android:layout_marginLeft="@dimen/margin_space"
                       android:layout_gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/android_ic">
                   </ImageView>   
                   
                   <TextView 
                       android:id="@+id/android_skill"
                       android:layout_marginLeft="@dimen/margin_space"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:text="@string/str_technical_android">
                    </TextView>
                </LinearLayout>		
                
                <!-- Brew, Native C -->
                <LinearLayout
                   android:id="@+id/brew"
                   android:layout_marginTop="5.0dip"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   
                   <ImageView
                       android:id="@+id/brew_icon"
                       android:layout_marginLeft="@dimen/margin_space"
                       android:layout_gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/brew_nativec_ic">
                   </ImageView>   
                   
                   <TextView 
                       android:id="@+id/brew_skill"
                       android:layout_marginLeft="@dimen/margin_space"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:text="@string/str_technical_brew">
                    </TextView>
                </LinearLayout>   
                
                <!-- J2ME, Flashlite -->
                <LinearLayout
                   android:id="@+id/flashlite"
                   android:layout_marginTop="5.0dip"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   
                   <ImageView
                       android:id="@+id/flashlite_icon"
                       android:layout_marginLeft="@dimen/margin_space"
                       android:layout_gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/flashlite_j2me_ic">
                   </ImageView>   
                   
                   <TextView 
                       android:id="@+id/flashlite_skill"
                       android:layout_marginLeft="@dimen/margin_space"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:text="@string/str_technical_flashlite">
                    </TextView>
                </LinearLayout>
                
                <TextView
                    android:id="@+id/letter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/str_technical_letter">
                </TextView>                  
	        </LinearLayout>
	        
       
        <LinearLayout 
            android:gravity="left|center" 
            android:orientation="horizontal" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <CheckBox 
                android:id="@+id/checkbox" 
                android:focusable="false"
                android:focusableInTouchMode="false"                
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="10.0dip" 
                android:src="@drawable/suggest_icon" />
                
            <TextView 
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"             
                android:textSize="@dimen/custom_font_size" 
                android:textColor="@color/custom_startup_color" 
                android:gravity="left" 
                android:paddingLeft="5.0dip" 
                android:text="@string/str_cv_at_startup" />
        </LinearLayout>
        
        <Button 
            android:layout_gravity="center" 
            android:id="@+id/btn_done"  
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="100.0sp" 
            android:layout_height="wrap_content" 
            android:layout_marginBottom="5.0dip" 
            android:text="@string/str_button_done" />  
            
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            </Button>
    </LinearLayout>

</ScrollView>